@model ClientLourd.Models.Commune

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/admin/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Commune</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
 

        <div class="form-group">
            @Html.Label("Nom commune", htmlAttributes: new { @class = "control-label col-md-2" })
            
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomfr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomfr, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Selectionner la gouvernorat", htmlAttributes: new { @class = "control-label col-md-2" })
            
            <div class="col-md-10">

                @*@Html.DropDownList("listDecideur",null,"select", new { onchange = "document.location.href = '/Authentification/Create?value=' + this.value;" })*@
                @Html.DropDownListFor(model => model.selectedGouv, new SelectList(ViewBag.listGouv, "Value", "Text"), null, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
